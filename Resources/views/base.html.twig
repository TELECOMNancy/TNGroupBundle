{# Base interface #}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>TELECOMNancy.net Admin Interface > {% block title %}Home{% endblock %}</title>
		
		{% stylesheets '@BootstrapBundle/Resources/public/css/bootstrap.min.css' filter='cssrewrite' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
		<style type="text/css">
			body {
				min-height: 2000px;
			}
			.navbar-static-top {
				margin-bottom: 19px;
			}
			footer {
				padding-top: 19px;
				color: #777;
				border-top: 1px solid #e5e5e5;
			}
		</style>
		{% endstylesheets %}
	</head>
	<body>
		<header>
			<div class="navbar navbar-default navbar-static-top" role="navigation">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="#">TELECOMNancy.net Admin Interface</a>
					</div>
					<div class="navbar-collapse collapse">
						<ul class="nav navbar-nav">
							<li class="active">
								<a href="#">Accueil</a>
							</li>
							<li>
								<a href="#">Test</a>
							</li>
						</ul>
						<ul class="nav navbar-nav navbar-right">
							<li>
								<a href="#">Connexion</a>
							</li>
						</ul>									
					</div>
				</div>
			</div>
		</header>

		<div class="container">

		{% block body %}

			<div class="jumbotron">
				<section>
					<header>
						<h1>Bienvenue</h1>
					</header>
					<p>Vous êtes sur la page d'accueil.</p>
				</section>				
			</div>

		{% endblock %}

		<footer>
				<p>Un bug ? Contactez <a href="mailto:admin-www@telecomnancy.net">les admins</a>. Merci d'indiquer précisement l'erreur et la manière de la reproduire.</p>
		</footer>

		</div> {# /container #}

		{% javascripts '@BootstrapBundle/Resources/public/js/bootstrap.min.js' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}

	</body>
</html>