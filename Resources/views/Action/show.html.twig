{% extends 'TNGroupBundle::base.html.twig' %}

{% block body -%}
    <h1>Action</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('action') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('action_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('action_new') }}">
            New
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
